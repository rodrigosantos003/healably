<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_profile.views.body_structure.BodyStructureFragment"
    android:background="@color/gunmetal">

<include
    android:id="@+id/include"
    layout="@layout/user_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bodyStructure_guidelineStart"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.1"/>

<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bodyStructure_guidelineEnd"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.9"/>

<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bodyStructure_guidelineTop"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.2"/>

<androidx.constraintlayout.widget.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bodyStructure_guidelineBottom"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.8"/>

<TextView
    android:id="@+id/imc_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="IMC"
    app:layout_constraintTop_toBottomOf="@id/include"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="40dp"
    android:textSize="40sp"/>

<TextView
    android:id="@+id/imc_valor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="18"
    app:layout_constraintTop_toBottomOf="@id/imc_label"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:textSize="30sp"
    android:textColor="#FFEB3B"/>

<androidx.cardview.widget.CardView
    android:id="@+id/card_Peso"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/bodyStructure_guidelineStart"
    app:layout_constraintEnd_toEndOf="@id/bodyStructure_guidelineEnd"
    app:layout_constraintTop_toBottomOf="@id/bodyStructure_guidelineTop"
    app:layout_constraintBottom_toTopOf="@id/card_Altura"
    android:backgroundTint="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/bodyStructure_peso_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bodyStructure_peso_lblData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Data"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_peso_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bodyStructure_peso_lblValor"/>

        <TextView
            android:id="@+id/bodyStructure_peso_lblValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/bodyStructure_peso_lblData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bodyStructure_peso_lblData"/>

        <TextView
            android:id="@+id/bodyStructure_peso_valorData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/02/2023"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/bodyStructure_peso_lblData"
            app:layout_constraintEnd_toEndOf="@id/bodyStructure_peso_lblData"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_peso_lblData"/>

        <TextView
            android:id="@+id/bodyStructure_peso_valorPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60kg"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/bodyStructure_peso_lblValor"
            app:layout_constraintEnd_toEndOf="@id/bodyStructure_peso_lblValor"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_peso_lblValor"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/card_Altura"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/bodyStructure_guidelineStart"
    app:layout_constraintEnd_toEndOf="@id/bodyStructure_guidelineEnd"
    app:layout_constraintTop_toBottomOf="@id/card_Peso"
    app:layout_constraintBottom_toTopOf="@id/card_PerimetroAbdominal"
    android:backgroundTint="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/bodyStructure_altura_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bodyStructure_altura_lblData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_altura_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bodyStructure_altura_lblValor"/>

        <TextView
            android:id="@+id/bodyStructure_altura_lblValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/bodyStructure_altura_lblData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bodyStructure_altura_lblData"/>

        <TextView
            android:id="@+id/bodyStructure_altura_valorData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/02/2023"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/bodyStructure_altura_lblData"
            app:layout_constraintEnd_toEndOf="@id/bodyStructure_altura_lblData"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_altura_lblData"/>

        <TextView
            android:id="@+id/bodyStructure_altura_valorPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.65m"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/bodyStructure_altura_lblValor"
            app:layout_constraintEnd_toEndOf="@id/bodyStructure_altura_lblValor"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_altura_lblValor"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/card_PerimetroAbdominal"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/bodyStructure_guidelineStart"
    app:layout_constraintEnd_toEndOf="@id/bodyStructure_guidelineEnd"
    app:layout_constraintTop_toBottomOf="@id/card_Altura"
    app:layout_constraintBottom_toTopOf="@+id/bodyStructure_guidelineBottom"
    android:backgroundTint="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/bodyStructure_perimetroabdominal_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perimetro Abdominal"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/bodyStructure_perimetroabdominal_lblData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_perimetroabdominal_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bodyStructure_perimetroabdominal_lblValor"/>

        <TextView
            android:id="@+id/bodyStructure_perimetroabdominal_lblValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/bodyStructure_perimetroabdominal_lblData"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bodyStructure_perimetroabdominal_lblData"/>

        <TextView
            android:id="@+id/bodyStructure_perimetroabdominal_valorData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/02/2023"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/bodyStructure_perimetroabdominal_lblData"
            app:layout_constraintEnd_toEndOf="@id/bodyStructure_perimetroabdominal_lblData"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_perimetroabdominal_lblData"/>

        <TextView
            android:id="@+id/bodyStructure_perimetroabdominal_valorPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50cm"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/bodyStructure_perimetroabdominal_lblValor"
            app:layout_constraintEnd_toEndOf="@id/bodyStructure_perimetroabdominal_lblValor"
            app:layout_constraintTop_toBottomOf="@id/bodyStructure_perimetroabdominal_lblValor"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<Button
    android:id="@+id/btn_editar"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="@id/bodyStructure_guidelineStart"
    app:layout_constraintEnd_toEndOf="@id/bodyStructure_guidelineEnd"
    android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>